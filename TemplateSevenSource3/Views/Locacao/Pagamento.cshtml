@model TemplateSevenSource3Dominio.Locacao

@{
    ViewBag.Title = "Pagamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <h2>Pagamento</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Locacao</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.TipoPagamento, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select id="tipopagamento" name="tipopagamento" class="form-control">
                        <option selected value="-">--Selecione</option>
                        <option value="A VISTA">A vista</option>
                        <option value="CARTÃO DE CRÉDITO">Cartão de débito</option>
                        <option value="CARTÃO DE DÉBITO">Cartão de crédito</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.TipoPagamento, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Pagar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Voltar as locações", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
