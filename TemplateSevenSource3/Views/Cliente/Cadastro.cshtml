@model TemplateSevenSource3Dominio.Cliente
<!DOCTYPE html>
<html>
@{
    ViewBag.Title = "Cadastro de clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="line-height:normal">
    <div class="container">
        <h2>Cadastro de Clientes</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken();
        <div style="width:50%">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label style="float:left">@Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                <div style=" width:100%;max-width:none;">@Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })</div>
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label style="float:left">@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })</label>

                <div style=" width:100%;max-width:none;">@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })</div>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                <label style="float:left; line-height:normal">@Html.LabelFor(model => model.Cnh, htmlAttributes: new { @class = "control-label col-md-2" })</label>

                <div style="width:100%;max-width:none">@Html.EditorFor(model => model.Cnh, new { htmlAttributes = new { @class = "form-control" } })</div>
                @Html.ValidationMessageFor(model => model.Cnh, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                <label style="float:left">@Html.LabelFor(model => model.Cpf, htmlAttributes: new { @class = "control-label col-md-2" })</label>

                <div style="width:100%;max-width:none">@Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control" } })</div>
                @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TelFixo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TelFixo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TelFixo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cadastrar" class="btn btn-success text-center" />
                </div>
            </div>         

        }
        <div>
            @Html.ActionLink("Voltar à lista", "Index")
        </div>
    </div>
    </body>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</html>