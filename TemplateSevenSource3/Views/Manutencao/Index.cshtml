@model IEnumerable<TemplateSevenSource3.Dominio.Manutencao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="container">
    <h2 class="text-center">Manutenções cadastradas</h2>

    <p>
        @Html.ActionLink("Cadastrar nova manutenção", "Cadastro")
    </p>
