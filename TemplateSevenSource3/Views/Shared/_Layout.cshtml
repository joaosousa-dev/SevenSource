<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-FulanoCar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("LOGOTIPO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("ìnicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Funcionários", "Index", "Funcionario")</li>
                    <li>@Html.ActionLink("Véiculos", "Index", "Veiculo")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content"style="margin-left:20px;margin-right:20px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FulanoCar Aluguel de Vaiculos</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/inputmask")
</body>
</html>
