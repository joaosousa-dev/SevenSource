<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DunlexCar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DunlexCar", "Dashboard", "Funcionario", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("ìnicio", "Dashboard", "Funcionario")</li>
                    <li>@Html.ActionLink("Funcionários", "Index", "Funcionario")</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Cliente")</li>
                    <li>@Html.ActionLink("Véiculos", "Index", "Veiculo")</li>
                    <li>@Html.ActionLink("Categorias", "Index", "Categoria")</li>
                    <li>@Html.ActionLink("Manutenções", "Index", "Manutencao")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cadastros<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Clientes", "Cadastro", "Cliente")</li>
                            <li>@Html.ActionLink("Funcionarios", "Cadastro", "Funcionario")</li>
                            <li>@Html.ActionLink("Veiculos", "Cadastro", "Veiculo")</li>
                            <li>@Html.ActionLink("Categorias", "Cadastro", "Categoria")</li>
                            <li>@Html.ActionLink("Marcas", "Cadastro", "Marca")</li>
                            <li>@Html.ActionLink("Manutenções", "Cadastro", "Manutencao")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Locação<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Lista de locações", "Index", "Locacao")</li>
                            <li>@Html.ActionLink("Nova Locação", "Cadastro", "Locacao")</li>
                            <li>@Html.ActionLink("Devolução", "Devolver", "Devolução")</li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Opções<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Sair</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-left:20px;margin-right:20px">
        @RenderBody()
        <hr />
        <div class="container body-content" style="text-align:center">
            <footer>
                <p>&copy; @DateTime.Now.Year - DunlexCar Aluguel de Veiculos</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/inputmask")
</body>
</html>
