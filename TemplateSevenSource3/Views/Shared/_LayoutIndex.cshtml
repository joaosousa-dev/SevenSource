<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - DunlexCar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">DunlexCar</a>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Funcionário", "Login", "Funcionario")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Veículos", "Lista", "Veiculo")</li>
                    <li>@Html.ActionLink("Categorias de veículos", "Lista", "Categoria")</li>
                    <li>@Html.ActionLink("Marcas de veículos", "Lista", "Marca")</li>

                </ul>

                <form class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Procurar">
                    </div>
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </form>


            </div>
            <!--/.navbar-collapse -->
        </div>
    </nav>
    <div class="container body-content" style="margin-left:20px;margin-right:20px">
        @RenderBody()
        <hr />
        <div class="container body-content" style="text-align:center">
            <footer>
                <p>&copy; @DateTime.Now.Year - DunlexCar Aluguel de Veiculos</p>
            </footer>
        </div>
    </div>
</body>
</html>
